{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",

    "lib": ["dom", "dom.iterable", "esnext"],

    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": false,

    "incremental": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,

    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,

    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "lib": ["./src/lib"],
      "lib/*": ["./src/lib/*"],
      "v2": ["./src/v2"],
      "v2/*": ["./src/v2/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "node_modules",
    "src/stories"
  ]
}
